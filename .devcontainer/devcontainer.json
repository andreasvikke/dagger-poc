{
	"name": "Go Dagger POC",
	"build": {
		"dockerfile": "Dockerfile"
	  },
	"runArgs": ["--privileged"],
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"extensions": [
				"rangav.vscode-thunder-client",
				"Codeium.codeium",
				"editorconfig.editorconfig"
			]
		}
	},
	"mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"]
}
